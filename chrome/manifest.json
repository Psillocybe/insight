{
    "name": "GitSense",
    "version": "0.3",
    "manifest_version": 2,
    "description": "Advanced search and code management metrics for Bitbucket, GitHub and GitHub Enterprise",
    "homepage_url": "https://gitsense.github.io",
    "options_page": "options.html",
    "icons": {
        "128": "images/icon-128.png"
    },
    "web_accessible_resources": [
        "3rdparty/octicons/*"
    ],
    "background": {
      "scripts": [ "background.js" ],
      "persistent": false
    },
    "optional_permissions": [
        "<all_urls>"
    ],
    "permissions": [
        "https://api.bitbucket.org/*",
        "https://api.github.com/*",
        "https://api.gitsense.com/*",
        "https://bitbucket.org/*",
        "https://github.com/*",
        "storage"
    ]
}
