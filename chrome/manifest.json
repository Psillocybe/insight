{
    "name": "GitSense",
    "version": "0.5",
    "manifest_version": 2,
    "description": "Advanced search and analytics for GitHub and GitLab",
    "homepage_url": "https://gitsense.com/blog",
    "options_page": "options.html",
    "icons": {
        "128": "images/icon-128.png"
    },
    "web_accessible_resources": [
        "frame.html",
        "3rdparty/octicons/*"
    ],
    "background": {
      "scripts": [ "background.js" ],
      "persistent": false
    },
    "optional_permissions": [
        "<all_urls>"
    ],
    "permissions": [
        "https://api.github.com/*",
        "https://github.com/*",
        "https://gitlab.com/*",
        "https://public.gitsense.com/*",
        "storage"
    ]
}
